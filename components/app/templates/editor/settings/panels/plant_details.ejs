<div class="<%= view.panelDivClass %>">
    <h4>Plant details</h4>
    <hr>

    <div class="row-fluid">
        <div class="span12">
            <form id="plant_details_settings"
                  class="form-horizontal plant-details-settings">

                <div class="control-group">
                    <label class="control-label" for="inputTitle">
                        Title
                    </label>
                    <div class="controls">
                        <a type="text" id="inputTitle"></a>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputDescription">
                        Description
                    </label>
                    <div class="controls">
                        <a type="text" id="inputDescription"></a>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputTextDirection">
                        Text direction
                    </label>
                    <div class="controls">
                        <a type="text" id="inputTextDirection"></a>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
