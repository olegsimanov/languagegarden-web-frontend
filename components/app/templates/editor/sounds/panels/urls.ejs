<% var panelId = 'sound-modal-urls-panel' %>
<div class="<%= view.panelDivClass %>">
    <div class="row-fluid">
        <div class="span12">
            <form id="<%= panelId %>-form"
                  class="form-horizontal plant-details-settings">

                <div class="control-group">
                    <label class="control-label" for="<%= panelId %>-input-url">
                        URL
                    </label>
                    <div class="controls">
                        <a class="input-url" type="text" id="<%= panelId %>-input-url"></a>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="<%= panelId %>-input-fallback-url">
                        Fallback URL (optional)
                    </label>
                    <div class="controls">
                        <a class="input-fallback-url" type="text" id="<%= panelId %>-input-fallback-url"></a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
